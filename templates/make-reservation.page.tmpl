{{template "base" .}}

{{define "content"}}
<div class="container">
            
    <div class="row">
        <div class="col-md-7 mx-auto">
            <h1>Make reservation</h1>
            <p><strong>Reservation Details</strong></p>

            {{$res := index .Data "reservation"}}
            <!-- <form action="" method="POST" class="needs-validation" novalidate> -->
            <form action="" method="POST" class="" novalidate>
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                <div class="row">

                    <div class="col">
                        <div class="mb-3">
                            <label for="first-name" class="form-label">First Name</label>
                            <input type="text" 
                            class="form-control {{with .Form.Errors.Get "first-name"}} is-invalid {{end}}" 
                            id="first-name" name="first-name" 
                            aria-describedby="firstNameHelp" 
                            required autocomplete="off"
                            value="{{$res.FirstName}}">
                            {{with .Form.Errors.Get "first-name" }}
                                <label for="" class="text-danger">{{.}}</label>
                            {{end}}
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label for="last-name" class="form-label">Last Name</label>
                            <input type="text" class="form-control {{with .Form.Errors.Get "last-name"}} is-invalid {{end}}" 
                            id="last-name" 
                            name="last-name" aria-describedby="lastNameHelp" 
                            required autocomplete="off"
                            value="{{$res.LastName}}">
                            {{with .Form.Errors.Get "last-name" }}
                                <label for="" class="text-danger">{{.}}</label>
                            {{end}}
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}" 
                            id="email" 
                            name="email" aria-describedby="emailHelp" 
                            required autocomplete="off"
                            value="{{$res.Email}}">
                            {{with .Form.Errors.Get "email" }}
                                <label for="" class="text-danger">{{.}}</label>
                            {{end}}
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label for="phone-number" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" 
                            id="phone-number" 
                            name="phone-number" aria-describedby="phoneNumberHelp" 
                            required autocomplete="off"
                            value="{{$res.Phone}} ">
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-warning">Submit</button>
            </form>



        </div>
    </div>
</div>
{{end}}